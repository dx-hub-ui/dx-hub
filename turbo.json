{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "SUPABASE_SERVICE_ROLE_KEY",
    "SENTRY_ENVIRONMENT",
    "SENTRY_AUTH_TOKEN",
    "SENTRY_ORG",
    "SENTRY_PROJECT",
    "SENTRY_RELEASE",
    "SENTRY_DSN",
    "POSTHOG_PERSONAL_API_KEY",
    "RESEND_API_KEY",
    "RESEND_FROM",
    "RESEND_REPLY_TO",
    "BREVO_API_KEY",
    "BREVO_BASE_URL",
    "POSTHOG_KEY",
    "POSTHOG_HOST"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "dev": {
      "cache": false
    },
    "lint": {},
    "typecheck": {}
  }
}
