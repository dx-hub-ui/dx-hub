{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "ignorePatterns": ["node_modules/", ".next/", "out/", "build/", "next-env.d.ts"],
  "rules": {
    "no-restricted-syntax": [
      "error",
      {
        "selector": "JSXElement > JSXText[value=/\\S+/]",
